<p id="notice"><%= notice %></p>

<h1>Ligações</h1>
<%= link_to '<i class="material-icons">add</i>'.html_safe , new_call_path, class:'btn-floating btn-large waves-effect waves-light red' %>
<table>
  <thead>
    <tr>
      <th>Virá visitar?</th>
      <th>Atendeu?</th>
      <th>Operador</th>
      <th>Contato</th>
      <th>Quando ligou</th>
      <th>Anotações</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calls.each do |call| %>
      <tr>
        <td><%= call.will_visit %></td>
        <td><%= call.answer %></td>
        <td><%= call.operator %></td>
        <td><%= call.contact.name if call.contact %></td>
        <td><%= call.call_time %></td>
        <td><%= call.obs %></td>
        <td><%= link_to 'Show', call %></td>
        <td><%= link_to 'Edit', edit_call_path(call) %></td>
        <td><%= link_to 'Destroy', call, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
